<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 50% opacity background image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_red_glow"
        android:scaleType="centerCrop"
        android:alpha="0.33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back arrow - Fixed position -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginStart="16dp"
        app:tint="@android:color/white" />

    <!-- Title - Centered -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Here?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Subtitle - Centered with 2 lines -->
    <TextView
        android:id="@+id/subtitleText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We're excited to have you. Just"
        android:textSize="14sp"
        android:textColor="#CBC5C4"
        android:gravity="center"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/subtitleText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="a few steps to go."
        android:textSize="14sp"
        android:textColor="#CBC5C4"
        android:gravity="center"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/subtitleText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="2dp" />



    <!-- Email Input -->
    <EditText
        android:id="@+id/email_input_signup"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:hint="Email"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/input_field_bg"
        android:textColor="@android:color/white"
        android:textColorHint="#B3FFFFFF"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/subtitleText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- password -->
    <EditText
        android:id="@+id/password_input_signup"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:hint="Enter password"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:background="@drawable/input_field_bg"
        android:textColor="@android:color/white"
        android:textColorHint="#B3FFFFFF"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/email_input_signup"
        app:layout_constraintStart_toStartOf="@id/email_input_signup"
        app:layout_constraintEnd_toEndOf="@id/email_input_signup"
        android:layout_marginTop="16dp" />

    <!-- confirm password -->
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:hint="Re-Enter Password"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:background="@drawable/input_field_bg"
        android:textColor="@android:color/white"
        android:textColorHint="#B3FFFFFF"
        android:textSize="15dp"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/password_input_signup"
        app:layout_constraintStart_toStartOf="@id/password_input_signup"
        app:layout_constraintEnd_toEndOf="@id/password_input_signup"
        android:layout_marginTop="16dp" />

    <!-- Next Button -->
    <!--android:textAllCaps="false" : this line is responsible for all capital text in button-->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:background="@drawable/white_bg_button"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/inknut_antiqua"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/confirm_password"
        app:layout_constraintStart_toStartOf="@id/confirm_password"
        app:layout_constraintEnd_toEndOf="@id/confirm_password"
        android:layout_marginTop="24dp" />

    <!-- Divider Text -->
    <TextView
        android:id="@+id/dividerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or register with"
        android:textColor="@android:color/white"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Google Sign In Button -->
    <LinearLayout
        android:id="@+id/googleSignInButton"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:focusable="true"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/input_field_bg"
        app:layout_constraintTop_toBottomOf="@id/dividerText"
        app:layout_constraintStart_toStartOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_google_logo"
            android:contentDescription="Google"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inknut_antiqua"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Already have account Text -->
    <TextView
        android:id="@+id/already_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? "
        android:textColor="@android:color/white"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toBottomOf="@id/googleSignInButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

    <!-- Log In Clickable Link -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log in"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:fontFamily="@font/inknut_antiqua"
        app:layout_constraintTop_toTopOf="@id/already_account_text"
        app:layout_constraintStart_toEndOf="@id/already_account_text"
        app:layout_constraintBottom_toBottomOf="@id/already_account_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>