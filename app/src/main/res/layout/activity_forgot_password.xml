<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_red_glow"
        android:scaleType="centerCrop"
        android:alpha="0.33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="16dp"
        app:tint="@android:color/white"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title - Centered -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/inknut_antiqua"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle - Centered -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter your email address for reset password."
        android:lineSpacingMultiplier="0.8"
        android:lineSpacingExtra="-5dp"
        android:textSize="14sp"
        android:textColor="#CBC5C4"
        android:fontFamily="@font/inknut_antiqua"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Input - Fixed text scrolling -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:hint="Enter your email"
        android:background="@drawable/input_field_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textColorHint="#B3FFFFFF"
        android:fontFamily="@font/inknut_antiqua"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Send Link Button -->
    <Button
        android:id="@+id/btn_send_link"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="Send Link"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/white_bg_button"
        android:fontFamily="@font/inknut_antiqua"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        app:layout_constraintStart_toStartOf="@id/email_input"
        app:layout_constraintEnd_toEndOf="@id/email_input"/>

    <!-- Remember Password Text - Centered -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_send_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/remember_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rememmber Password? "
            android:textColor="@android:color/white"
            android:fontFamily="@font/inknut_antiqua"/>

        <TextView
            android:id="@+id/redirect_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="log in"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:fontFamily="@font/inknut_antiqua"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>