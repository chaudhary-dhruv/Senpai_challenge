<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_red_glow">

    <!-- Top Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_white_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naruto324"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Anime List ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Naruto -->
            <ImageButton
                android:id="@+id/btnNaruto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/naruto_banner" />

            <!-- One Piece -->
            <ImageButton
                android:id="@+id/btnOnePiece"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/onepiece_banner" />

            <!-- Bleach -->
            <ImageButton
                android:id="@+id/btnBleach"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/bleach_banner" />

            <!-- Demon Slayer -->
            <ImageButton
                android:id="@+id/btnDemonSlayer"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/demonslayer_banner" />

            <!-- Attack on Titan -->
            <ImageButton
                android:id="@+id/btnAttackOnTitan"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/aot_banner" />


            <!-- Boruto -->
            <ImageButton
                android:id="@+id/btnBoruto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/boruto_banner" />

            <!-- Hunter X Hunter -->
            <ImageButton
                android:id="@+id/btnHunterXHunter"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/hunterxhunter_banner" />


            <!-- Dragon Ball Z -->
            <ImageButton
                android:id="@+id/btnDragonBallZ"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/dragonball_banner" />


            <!-- Jujutsu Kaisen -->
            <ImageButton
                android:id="@+id/btnJujutsuKaisen"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/jjk_banner" />


            <!-- Death Note -->
            <ImageButton
                android:id="@+id/btnDeathNote"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/deathnote_banner" />


            <!-- Your Name -->
            <ImageButton
                android:id="@+id/btnYourName"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/yourname_banner" />

            <!-- My Hero Academia -->
            <ImageButton
                android:id="@+id/btnMyHeroAcademia"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/myheroacademia_banner" />


            <!-- One Punch Man -->
            <ImageButton
                android:id="@+id/btnOnePunchMan"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/onepunchman_banner" />

            <!-- Spirited Away -->
            <ImageButton
                android:id="@+id/btnSpiritedAway"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/spiritedaway_banner" />

            <!-- Akira -->
            <ImageButton
                android:id="@+id/btnAkira"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/akira_banner" />


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
